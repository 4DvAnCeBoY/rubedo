<!--change my password modal-->
<div id="changepassword-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{{ 'Blocks.Auth.Title.ChangePassword' | fotrans }}</h3>
    </div>
    <form class="form-horizontal" method="post">
        <input type="hidden" name="token" value="{{ token }}" />
        <input type="hidden" name="recoverEmail" value="{{ recoverEmail }}"/>
        <div class="modal-body">
        <div class="control-group">
            <label class="control-label" for="password">{{ "Blocks.Auth.Label.Password" | fotrans }} *</label>

            <div class="controls">
                <input
                        type="password"
                        id="password"
                        class="input-medium"
                        placeholder="{{ "Blocks.Auth.Label.Password" | fotrans }}"
                        value="{{ password }}"
                        required="required"
                        name="password"
                        />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="passwordConfirm">{{ "Blocks.Auth.Label.PasswordConfirm" | fotrans }}
                *</label>

            <div class="controls">
                <input
                        type="password"
                        id="passwordConfirm"
                        class="input-medium"
                        placeholder="{{ "Blocks.Auth.Label.PasswordConfirm" | fotrans }}"
                        value="{{ passwordConfirm }}"
                        required="required"
                        name="passwordConfirm"
                        />
            </div>
        </div>
        <div class="xhr-return {% if error %}alert alert-error{% elseif success %}alert alert-success{% else %}hidden{% endif %}">
            {% if error %}
                {{ error | fotrans }}
            {% elseif success %}
                {{ 'Blocks.Auth.Success.PasswordChanged' | fotrans }}
            {% endif %}
        </div>
        </div>
        <div class="modal-footer">
            <a href="#" data-dismiss="modal" class="btn">{{ "Label.Cancel" | fotrans }}</a>
            <input type="submit" class="btn btn-primary" value="{{ 'Blocks.Auth.Label.ChangePassword' | fotrans }}"{% if success %} disabled="disabled"{% endif %}/>
        </div>
    </form>
</div>