<!--recover my password modal-->
<div id="recoverpwd-modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{{ "Blocks.Auth.Title.RecoverPassword" | fotrans }}</h3>
    </div>
    <form class="form-horizontal" method="get">
        <div class="modal-body">
            <div class="control-group{% if recoverEmail is defined and user is null %} error{% elseif mailSent %} success{% endif %}">
                <label class="control-label" for="email">{{ "Blocks.Auth.Label.Email" | fotrans }} *</label>
                <div class="controls">
                    <input
                            type="email"
                            id="email"
                            class="input-medium"
                            placeholder="{{ "Blocks.Auth.Label.Email" | fotrans }}"
                            value="{{ recoverEmail }}"
                            required="required"
                            name="recoverEmail"
                            />
                    {% if recoverEmail is defined and user is null %}
                        <span class="help-block">{{ 'Blocks.Auth.Msg.EmailNotFound' | fotrans }}</span>
                    {% elseif mailSent %}
                        <span class="help-block">{{ 'Blocks.Auth.Msg.EmailSent' | fotrans }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="xhr-return hidden"></div>
        </div>
        <div class="modal-footer">
            <a href="#" data-dismiss="modal" class="btn">{{ "Label.Cancel" | fotrans }}</a>
            <input type="submit" class="btn btn-primary" value="{{ 'Blocks.Auth.Label.Recover' | fotrans }}" />
        </div>
    </form>
</div>