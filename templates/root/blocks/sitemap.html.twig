{% extends "/block.html.twig" %}

{% block mainContent %}
    <input type="hidden" value="{%if displayLevel %}{{ displayLevel }}{% else %}0{% endif %}" id="displayLevel" />

    <ul id="siteMap">
        {% for page in pages %}
            <li>{% if page.pages is defined %}<a href="#" class="expend" onclick="editList(this, '{{ page.id }}');return false;"><i class="icon-minus min"></i></a>{% endif %}<a href="{{ page.url }}">{{ page.title }}</a></li>
            {% if page.pages is defined %}
                {% include "/blocks/tree/pages.html.twig" with {"pages" : page.pages, "rootPage" : page} only %}
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}
