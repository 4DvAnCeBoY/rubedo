{% extends "@Root/block.html.twig" %}
{% block mainContent %}
    <h2>Checkout</h2>
    <div class="progress checkout-progress">
        <div class="bar" id="checkoutmainprogress" style="width: 17%"></div>
    </div>
    <div class="accordion" id="accordioncheckout" data-currentstep="{{ currentStep }}" {% if isLoggedIn %} data-current-user="{{ currentUser |json_encode }}" {% endif %}>
