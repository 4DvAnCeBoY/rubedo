            <div class="accordion-heading checkout-heading">
                <a class="checkouteditlink" data-targetstep="1" onclick="setCheckoutStep(1);return false;" href="#" style="display : none;"><i class="icon-pencil"></i></a>
                <h5>Step 1 : Checkout options</h5>
            </div>
            <div id="checkoutstep1" data-parent="accordioncheckout" class="accordion-body collapse checkout-holder">
                <div class="accordion-inner checkout-inner">
                    {{ include('blocks/checkout/step1.html.twig') }}
