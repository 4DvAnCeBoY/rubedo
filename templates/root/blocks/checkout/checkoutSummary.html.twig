<div class="row-fluid">
    <div class="span6">
        <h4>Billing address</h4>
        <p><strong>VAT number / EIN  : </strong>{{ billingAddress.vatEin }}</p>
        <p><strong>Company /Organization  : </strong>{{ billingAddress.company }}</p>
        <p><strong>Attention : </strong>{{ billingAddress.attention }}</p>
        <p><strong>Address 1 : </strong>{{ billingAddress.address1 }}</p>
        <p><strong>Address 2 : </strong>{{ billingAddress.address2 }}</p>
        <p><strong>City : </strong>{{ billingAddress.city }}</p>
        <p><strong>Country : </strong>{{ billingAddress.country }}</p>
        <p><strong>State / Province : </strong>{{ billingAddress.regionState }}</p>
        <p><strong>Zip / Postal Code : </strong>{{ billingAddress.postCode }}</p>
    </div>
    <div class="span6">
        <h4>Shipping address</h4>
        <p><strong>Company /Organization  : </strong>{{ shippingAddress.company }}</p>
        <p><strong>Attention : </strong>{{ shippingAddress.attention }}</p>
        <p><strong>Address 1 : </strong>{{ shippingAddress.address1 }}</p>
        <p><strong>Address 2 : </strong>{{ shippingAddress.address2 }}</p>
        <p><strong>City : </strong>{{ shippingAddress.city }}</p>
        <p><strong>Country : </strong>{{ shippingAddress.country }}</p>
        <p><strong>State / Province : </strong>{{ shippingAddress.regionState }}</p>
        <p><strong>Zip / Postal Code : </strong>{{ shippingAddress.postCode }}</p>
    </div>
</div>
<div class="row-fluid">
    <h4>Order review</h4>
    {% if cart is empty %}
        <p class="text-center">Your cart is empty</p>
    {% else %}

        <table class="table table-condensed table-striped table-hover">
            <thead>
            <tr>
                <th>Item</th>
                <th>Price (includes taxes)</th>
                <th>Amount</th>
                <th>Total Price (includes taxes)</th>
            </tr>
            </thead>
            <tbody>
            {% for item in cart %}
                <tr>
                    <td><a href='{{ displayUrl(item.productId,"default",null) }}?variation={{ item.variationId}}'>{{ item.title }} <small class="muted">{{ item.subtitle }}</small></a></td>
                    <td>{{ item.unitTaxedPrice }} €</td>
                    <td>x {{ item.amount }}</td>
                    <td>{{ item.taxedPrice }} €</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <dl class="dl-horizontal pull-right">
            <dt>Sub-total :</dt>
            <dd> {{ totalPrice}} €</dd>
        </dl>
        <div class="clearfix"></div>
        <dl class="dl-horizontal pull-right">
            <dt>Shipping :</dt>
            <dd> {{ shippingPrice}} €</dd>
        </dl>
        <div class="clearfix"></div>
        <dl class="dl-horizontal pull-right">
            <dt>Taxes :</dt>
            <dd> {{  totalTaxedPrice -  totalPrice + shippingTax}} € </dd>
        </dl>
        <div class="clearfix"></div>
        <dl class="dl-horizontal pull-right">
            <dt>Total :</dt>
            <dd> {{ totalTaxedPrice + shippingTaxedPrice}} € </dd>
        </dl>
        <div class="clearfix"></div>
    {% endif %}
</div>
<div class="row-fluid">
    <h4>Payment method</h4>
    <form method="post" class="form-horizontal" id="checkoutConfirm" >
        <input type="hidden" name="isConfirmOrderPost" value="Confirm">
        <input type="hidden" name="shippingMethod" value="{{ shippingMethod }}">

        {% for pm in paymentMeans %}
            <label class="radio">
                <input type="radio" name="paymentMeans"  value="{{ pm.paymentMeans }}" {% if loop.index==1 %} checked {% endif %} >
                {{ pm.displayName }}
            </label>
        {% endfor %}
        <button class="btn btn-primary" id="chkStep6Finish" type="submit">Confirm order</button>
    </form>
</div>