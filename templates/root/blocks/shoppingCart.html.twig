{% extends "/block.html.twig" %}
{% block mainContent %}
    <div class="btn-group" id="shoppingcart">
        <button class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-shopping-cart"></i> {{ 'Label.ShoppingCart'|fotrans }} <span class="badge spcnboitems">{{ totalItems }}</span> <span class="caret"></span></button>
        <div class="dropdown-menu shoppingcartmenu">
            <div class="shoppingcartholder">
                    {% include '/blocks/shoppingCart/productList.html.twig' %}
            </div>
            <div class="checkout-hidden-if-empty {% if cartItems is empty %}hidden{% endif %}">
                {% if checkoutPage %}<a href="{{ checkoutPageUrl }}"><button class="btn pull-right scartbtn">{{ 'Label.Checkout'|fotrans }}</button></a>{% endif %}
                {% if cartDetailPage %}<a href="{{ cartDetailPageUrl }}"><button class="btn pull-right scartbtn">{{ 'Blocks.ShoppingCart.ViewCart'|fotrans }}</button></a>{% endif %}
            </div>
        </div>
    </div>
{% endblock %}