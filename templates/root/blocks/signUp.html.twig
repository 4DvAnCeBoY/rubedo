{% extends "@Root/block.html.twig" %}

{% block mainContent %}
<div class="row-fluid">
	<div class="span12">
	{% if contentId %}
        <div id="introduction-{{prefix}}"><div class="editable" id="{{ contentId }}_body">{{ text|cleanHtml }}</div></div>
        <div class="clearfix"></div>
    {% endif %}
	<form class="form-horizontal" id="form-{{ prefix }}">
    	<div class="control-group">
            <label class="control-label" >Email *</label>
            <div class="controls">
              <input type="email" name="email" required>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" >Name *</label>
            <div class="controls">
              <input type="text" name="name" required>
            </div>
        </div>
        
        {% for field in fields %}
            {% if not field['config']['allowBlank'] %}
                {% if field['cType']=='Ext.form.field.Text' %}
                    <div class="control-group">
                        <label class="control-label" >{{ field['config']['fieldLabel'] }}</label>
                        <div class="controls">
                          <input type="text" name="{{ field['config']['name'] }}" required>
                        </div>
                    </div>
                {% endif %}
            {%  endif %}
        {% endfor %}
        
        <div class="control-group">
            <div class="controls">
            <input type="hidden" name="userTypeId" value="{{ userTypeId }}">
            <button type="submit" id="submit-{{ prefix }}" class="btn btn-primary">SIGN UP</button>
            </div>
        </div>
	</form>
	</div>
</div>
{% endblock %}