
<div class="block clearfix">



	<h2 class="post-title-small">
		<a href='{{ displaySingleUrl(content.id,null,singlePage) }}' title='Actu'>{{content.title}}</a>
	</h2>


	<div class="">{% if content.date %} Le {{content.date}} {% endif %}</div>
	{% if content.image %}
	<div class="pull-left thumbnail" style="margin: 1em;">
		<a href="{{ displaySingleUrl(content.id,null,singlePage) }}"><img alt=""
			class="imageLeft" src="/image?file-id={{content.image}}"
			style="max-height: 80px; max-width: 80px;" /></a>
	</div>
	{% endif %}
	<div class="editable" id="{{ content.id }}_summary">
		{{content.summary|cleanHtml}}</div>
	
	
	<a href="{{ displaySingleUrl(content.id,null,singlePage) }}">Lire la suite</a>


</div>
