
<div class="block clearfix"
	style="border-bottom: 1px solid #E3E3E8; margin-bottom: 10px; padding-bottom: 2px;">
	{% if content.image %} <a href="{{ displaySingleUrl(content.id) }}"><img
		alt="" class="imageLeft"
		src="/dam?media-id={{content.image}}&amp;width=80&amp;height=80&amp;mode=boxed"
		style="max-height: 80px; max-width: 80px;" /></a> {% endif %}
	<header class="entry-header">
		<h2 class="post-title-small">
			<a href='{{ displaySingleUrl(content.id) }}' title='Actu'>{{content.title}}</a>
		</h2>
	</header>
	<div class="entry-content editable" id="{{ content.id }}_summary">
		{{content.summary|cleanHtml}}</div>
	<div class="entry-info">{% if content.date %} Le {{content.date|localizeddate('long', 'none', lang)}} {% endif %}</div>
	<div class="btn btn-small pull-right">
		<a href="{{ displaySingleUrl(content.id) }}">En savoir plus <span
			class="icon-forward"></span></a>
	</div>


</div>
