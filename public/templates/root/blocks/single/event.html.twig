{% extends "root/block.html.twig" %}

{% block mainContent %}

    <div class="block headline">
        {% include "/root/blocks/edition/full-edition-button.html.twig" %}
        
		<h2 class="editable" id="{{ data.id }}_text"  data-field-type="title" data-locale="{{ data.locale }}">{{ data.text }}</h2>
		<div class="alignright">
			{% for taxonomy in data.terms %}
			    {% for term in taxonomy %}
			        <span class="label label-warning">{{term}}</span>
			    {% endfor %}
			{% endfor %}
        </div>
        <div class="clearfix"></div>
        <br>
        
	    <div class="entry-info">
		    {% if data.date %}
		        {% if data.dateEnd%}	
		            <div class="entry-info">
                        <span class="date" id="{{ data.id }}_date" data-locale="{{ data.locale }}">{{ "date.from" | fotrans | ucfirst}} {{data.date|localizeddate('long', 'none', lang)}}</span> {{ "date.to" | fotrans }} <span class="date" id="{{ data.id }}_date">{{data.dateEnd|localizeddate('long', 'none', lang)}}</span>
                    </div>
		        {% else %}
		            {%  if(type["date"]["config"]["multivalued"]) and data.date is iterable%}
	                    {% for item in data.date %}
    	                    <div class="entry-info date" id="{{ data.id }}_date-{{ loop.index-1 }}" data-locale="{{ data.locale }}">
        	                    {{ "date.startingFrom" | fotrans | ucfirst}} {{item|localizeddate('long', 'none', lang)}}
                            </div>
    	                {% endfor %}
                    {% else %}
    	                <div class="entry-info date" id="{{ data.id }}_date" data-locale="{{ data.locale }}">
                            {{ "date.startingFrom" | fotrans | ucfirst }} {{data.date|localizeddate('long', 'none', lang)}}
                        </div>
                        
                        <br>
                    {% endif %}
			    {% endif %}
		    {% endif %}
            
		    {% if data.position %}
	            {% include "/root/blocks/fields/localiser.html.twig" with { "key" : "position"} %}
            {% endif %}
        
		</div>
	    <div class="clear-both"></div>
	    <div class="row">
    	    <dic class="span4">
        		{% if data.image %}
        		    {% include "/root/blocks/fields/mediaField.html.twig" with { "key": "image" } %}
        		{% endif %}
    		</dic>
            
            <dic class="span8">
                {% include "/root/blocks/fields/CKEfield.html.twig" with { "key" : "body" } %}
            </dic>
        </div>
    </div>
    
    {% if activateDisqus and disqusKey %}
        {{ include('root/blocks/disqus/disqus.html.twig') }}
    {% endif %}
{% endblock %}
