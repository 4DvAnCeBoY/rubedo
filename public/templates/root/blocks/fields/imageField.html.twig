{% if type[key]["config"]["multivalued"] and data[key] is iterable %}
    {% for item in data[key] %}
        <div class="{% if thumbnail %}thumbnail{% endif %} editable-img" id="{{ data.id }}_{{ key }}-{{ loop.index-1 }}">
            <img class="image-field {% if imageRounded %}image-rounded{% endif %} imageLeft" src="/dam?media-id={{ item }}{% if width %}&width={{ width }}{% endif %}{% if height %}&height={{ height }}{% endif %}{% if mode %}&mode={{ mode }}{% endif %}" alt="{{data.text}}" title="{{data.text}}" />
        </div>
    {% endfor %} 
{% else %}
    <div class="{% if thumbnail %}thumbnail{% endif %} editable-img" id="{{ data.id }}_{{ key }}">
        <img class="img-field {% if imageRounded %}image-rounded{% endif %} imageLeft" src="/dam?media-id={{ data[key] }}{% if width %}&width={{ width }}{% endif %}{% if height %}&height={{ height }}{% endif %}{% if mode %}&mode={{ mode }}{% endif %}" alt="{{data.text}}" title="{{data.text}}" />
    </div>
{% endif %}
