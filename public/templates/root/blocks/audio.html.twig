{% extends "root/block.html.twig" %}

{% block mainContent %}
    {% if audioFile %}
        <audio  
            {%if audioAutoplay==true%} autoplay="true" {%endif%} 
            {%if audioPreload==true %} preload="true" {%endif%}
            {%if audioLoop==true %} loop="true" {%endif%}
            {%if audioControls==true %} controls="true" {%endif%}> 
                <source src="/dam?media-id={{ audioFile }}" type="{{ contentType }}"></source>
                {% for alternativeMedia in alternativeMediaArray %}
                    <source src="/file?file-id={{ alternativeMedia.id }}" type="{{ alternativeMedia.contentType }}"></source>
                {% endfor %}
                {{ alt }}
        </audio>
    {% endif %}
{% endblock %}

