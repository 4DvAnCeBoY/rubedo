{% extends "root/block.html.twig" %}

{% block mainContent %}
    {% if audioFile %}
        <audio  
            {%if audioAutoPlay %} autoplay {%endif%} 
            {%if audioPreload %} preload="auto" {% else %}preload="none"{%endif%}
            {%if audioLoop %} loop {%endif%}
            {%if audioControls %} controls {%endif%}> 
                <source src="/dam?media-id={{ audioFile }}" type="{{ contentType }}" />
                {% for alternativeMedia in alternativeMediaArray %}
                    <source src="/file?file-id={{ alternativeMedia.id }}" type="{{ alternativeMedia.contentType }}" />
                {% endfor %}
                {{ alt }}
        </audio>
    {% endif %}
{% endblock %}

