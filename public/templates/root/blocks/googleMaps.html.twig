{% extends "root/block.html.twig" %}

{% block mainContent %}
{% if isLoggedIn %}
{%if query.type=="manual" or query.type=="simple"%}
<div id="list-editmode" class="hide">
	<div class="btn-group pull-left">
	<a class="btn" href="#" id="btn-add-content" onclick="createContentWindow('{{query.type}}','{{data[0].typeId}}','{{query.id}}')"> <i class="icon-plus-sign"></i>
	Ajouter un contenu
	</a>
	</div>
</div>
<div class="clearfix"></div>
{%endif%}
{%endif%}

<div class="block contentlist" style="margin-top:2em;">
	<div class="row-fluid">
		{% for content in data %}
		{% include content.type  %}
		{% endfor %}
	</div>
	{%if page.limitPage > 1 %}
		
		<div class="pagination pagination-mini">
			<ul>
				{% if page.currentPage != 1%}
				<li>
					<a href="{{url({'page': page.currentPage-1,'prefix':prefix},true)}}"><<</a>
				</li>
				{%endif%}
				{% for  i in 1..page.limitPage %}
				<li {% if page.currentPage == i%}class="active"{%endif%}>
					<a href="{{url({'page': i,'prefix':prefix},true)}}">{{i}}</a>
				</li>
				{%endfor%}
				{% if page.currentPage != page.limitPage %}
				<li>
					<a href="{{url({'page': page.currentPage+1,'prefix':prefix},true)}}">>></a>
				</li>
				{%endif%}
			</ul>
		</div>
		{%endif%}
</div>
{% endblock %}
