{
    "name": "webtales/rubedo",
    "description": "Rubedo application platform core",
    "keywords": ["framework", "webtales", "rubedo"],
    "license": "MIT",
  "minimum-stability": "dev",
  "type": "project",
    "require": {
        "php": ">=5.5.9",
        "mnsami/composer-custom-directory-installer": "1.1.*",
        "laravel/lumen-framework": "5.2.*",
        "vlucas/phpdotenv": "~2.2",
        "webtales/alambic": "dev-master",
        "webtales/ExtensionTest": "dev-master",
        "league/flysystem": "*",
        "league/flysystem-cached-adapter":"*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    },
  "repositories": [
    {
      "type": "vcs",
      "url": "git://github.com/WebTales/extension-test.git"
    }
    ],
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
  "extra": {
    "installer-paths": {
      "./app/Extensions/{$name}": ["webtales/ExtensionTest"]
    }
  }
}
