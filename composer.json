		"ext-gd": "*",
		"ext-mongo": ">=1.3.0",
		"twig/twig": "1.13.*",
		"webtales/mongo-filters": "1.3.0RC1",
		"twig/extensions": "1.0.*",
		"ruflin/Elastica": "0.90.*",
		"ezyang/htmlpurifier": "4.5.*",
		"bombayworks/zendframework1": "1.12.*",
		"alb/oembed": "1.1.*",
		"swiftmailer/swiftmailer": "5.0.*"
	},
	"require-dev": {
